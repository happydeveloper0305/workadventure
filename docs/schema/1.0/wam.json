                          "type": "string"
                        },
                        "jitsiUrl": {
                          "type": "string"
                        },
                        "closable": {
                          "type": "boolean"
                        },
                        "trigger": {
                          "type": "string",
                          "enum": [
                            "onaction",
                            "onicon"
                          ]
                        },
                        "triggerMessage": {
                          "type": "string"
                        },
                        "noPrefix": {
                          "type": "boolean"
